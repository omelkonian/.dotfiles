# IP
get_ip() {
  ip route get 8.8.8.8 | awk '{print $NF; exit}'
}

# external IP
extip() {
  curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//'
}

# ssh keys
function gen_ssh_key {
    ssh-keygen -t rsa -C "$1" -b 4096
}

