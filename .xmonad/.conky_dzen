background yes
out_to_console yes
out_to_x no
own_window no
# Update interval in seconds
update_interval 1

TEXT
^i(/home/orestis/.xmonad/dzen2/cpu.xbm) ${cpu}% \
^i(/home/orestis/.xmonad/dzen2/mem.xbm) ${memperc}% \
^i(/home/orestis/.xmonad/dzen2/volume.xbm) ${exec /home/orestis/.xmonad/volume.sh} \
^i(/home/orestis/.xmonad/dzen2/battery.xbm) ${exec acpi --battery | grep -o '..%'} \
^i(/home/orestis/.xmonad/dzen2/clock.xbm) ${time %d %m %Y} \
${time %R}
