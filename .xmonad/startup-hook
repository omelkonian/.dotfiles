#!/bin/bash

source ~/.zshrc
echo "ZSH run"

start_app "synapse -s"
start_app "nm-applet --sm-disable"
start_app "birdtray" # "thunderbird"
# sleep 2 && start_app "slack"
sleep 2 && start_app "zulip"
# start_app "pcloud"
echo "Apps started"

setup_screens
echo "Screens setup"

remote-touchpad__enable
echo "Remote touchpad enabled"
