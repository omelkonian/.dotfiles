#!/bin/bash

function start {
    if [ -z "$(pgrep $1)" ] ; then
        $1 &
    fi
}

# Network manager
if [ -z "$(pgrep nm-applet)" ] ; then
    nm-applet --sm-disable &
fi

# App launcher
if [ -z "$(pgrep synapse)" ] ; then
    synapse -s &
fi

# Skype
start "skype"

# Thunderbird
start "thunderbird"
